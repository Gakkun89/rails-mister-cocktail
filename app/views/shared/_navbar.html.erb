<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <p>Cocktail O'clock</p>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <i class="fas fa-cocktail dropdown-toggle nav-link" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: white;">+</i>
         <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <li role="cocktail-dropdown-item">
            <h2>New Cocktail</h2>
            <%= simple_form_for @cocktail do |f| %>
              <%= f.input :name, label:false %>
              <%= f.submit "Add Cocktail", class: "btn btn-primary cocktail-hover" %>
            <% end %>
           </li>
         </ul>
      </li>
    </ul>
  </div>
</div>
